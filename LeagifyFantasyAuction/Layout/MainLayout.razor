@inherits LayoutComponentBase

<style>
    .main-layout { display: flex; flex-direction: column; min-height: 100vh; }
    .main-header {
        background: linear-gradient(to right, #064e3b 0%, var(--primary-green) 50%, #10b981 100%);
        color: white;
        padding: 16px 24px;
        font-size: 20px;
        font-weight: 700;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        letter-spacing: 0.5px;
    }
    .main-content-wrapper { display: flex; flex: 1; }
    .main-body { flex: 1; padding: 20px; }
    .main-footer {
        background: linear-gradient(to right, #064e3b 0%, var(--primary-green) 50%, #10b981 100%);
        padding: 12px 24px;
        font-size: 12px;
        color: rgba(255, 255, 255, 0.9);
        text-align: center;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.15);
    }
    .main-footer a { color: var(--accent-gold); text-decoration: none; transition: color 0.2s ease; }
    .main-footer a:hover { color: #fbbf24; text-decoration: underline; }
</style>

@* Temporarily disabled to debug recursion issue *@
@* <FluentDesignTheme /> *@
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />

<div class="main-layout">
    <header class="main-header">
        LeagifyFantasyAuction
    </header>
    <div class="main-content-wrapper">
        <NavMenu />
        <main class="main-body">
            <ErrorBoundary>
                <ChildContent>
                    <div class="content">
                        @Body
                    </div>
                </ChildContent>
                <ErrorContent Context="ex">
                    <div class="blazor-error-boundary">@ex.Message</div>
                </ErrorContent>
            </ErrorBoundary>
        </main>
    </div>
    <footer class="main-footer">
        <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
    </footer>
</div>
