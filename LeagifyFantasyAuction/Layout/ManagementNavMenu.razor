@using Microsoft.AspNetCore.Components.Routing

<style>
    .management-nav {
        width: 250px;
        background: linear-gradient(to bottom, #064e3b 0%, var(--primary-green) 50%, #10b981 100%);
        border-right: 3px solid var(--accent-gold);
        padding: 20px 0;
        box-shadow: 4px 0 12px rgba(0, 0, 0, 0.15);
    }
    .nav-header {
        padding: 0 20px 16px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        margin-bottom: 16px;
    }
    .nav-header h5 { margin: 0; font-size: 16px; font-weight: 600; color: white; }
    .nav-header p { margin: 4px 0 0; font-size: 12px; color: rgba(255, 255, 255, 0.7); }
    .nav-item {
        display: block;
        padding: 14px 20px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.85);
        border: none;
        background: none;
        cursor: pointer;
        transition: all 0.2s ease;
        border-left: 4px solid transparent;
        font-weight: 500;
    }
    .nav-item:hover {
        background: rgba(255, 255, 255, 0.15);
        text-decoration: none;
        color: white;
        border-left-color: var(--accent-gold);
        transform: translateX(2px);
    }
    .nav-item.active {
        background: rgba(255, 255, 255, 0.25);
        color: white;
        border-left-color: var(--accent-gold);
        box-shadow: inset 0 0 12px rgba(0, 0, 0, 0.2);
        font-weight: 600;
    }
    .nav-item.active:hover {
        background: rgba(255, 255, 255, 0.3);
    }
</style>

