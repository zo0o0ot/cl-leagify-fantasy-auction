            <FluentIcon Value="@(new Icons.Regular.Size24.DocumentAdd())" />
            <FluentLabel Typo="Typography.PaneHeader">Import Schools from CSV</FluentLabel>
        </FluentStack>
    </FluentDialogHeader>

    <FluentDialogBody>
        @if (!importingCsv)
        {
            <FluentStack Orientation="Orientation.Vertical" VerticalGap="15">
                <div class="alert alert-info" role="alert">
                    <strong>CSV Import with Logo Downloads:</strong><br/>
                    Upload your CSV file and school logos will be automatically downloaded and stored locally.
                    The CSV should have columns: School, Conference, ProjectedPoints, NumberOfProspects, SchoolURL, etc.
                </div>
                
                <FluentInputFile @ref="csvFileInput" 
                               AnchorId="csv-upload-anchor"
                               Accept=".csv"
                               Multiple="false"
                               OnCompleted="@OnCsvFileSelected"
                               MaximumFileCount="1"
                               MaximumFileSize="@(10 * 1024 * 1024)">
                    <ChildContent>
                        <FluentLabel>
                            <FluentButton Id="csv-upload-anchor" Appearance="Appearance.Outline">
                                <FluentIcon Value="@(new Icons.Regular.Size20.Folder())" />
                                &nbsp; Choose CSV File
                            </FluentButton>
                        </FluentLabel>
                    </ChildContent>
                </FluentInputFile>

